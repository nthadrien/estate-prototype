    body {
        font-family: sans-serif;
        line-height: 1.6;
        margin: 20px;
    }
    h1, h2, h3 {
        color: #333;
    }
    ol, ul {
        margin-bottom: 20px;
    }
    li {
        margin-bottom: 5px;
    }
    p {
        margin-bottom: 15px;
    }
</style>