---
import AdOne from "@components/ads/AdOne.astro";
import AdThree from "@components/ads/AdThree.astro";
import AdTwo from "@components/ads/AdTwo.astro";


---
<section style="height:max(42vh,380px)" class="container mx-auto rounded">

    <div id="carouselOfAds" class="carousel slide"data-bs-ride="carousel" >

    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselOfAds" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselOfAds" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselOfAds" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>

    <div class="carousel-inner">

        <div class="carousel-item active" >
            <AdOne />
        </div>

        <div class="carousel-item" >
            <AdTwo />
        </div>

        <div class="carousel-item">
            <AdThree />
        </div>
    </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselOfAds" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>

        <button class="carousel-control-next btn-sm" type="button" data-bs-target="#carouselOfAds" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>

</section>