---

import { useTranslations, getLangFromUrl } from "src/i18n/utils.ts";
import Logo from "@components/navbars/Logo.astro";
import OffCanvas from "@components/navbars/OffCanvas.astro";

const locale = getLangFromUrl(Astro.url);
const t = useTranslations(locale);
---
<!-- -->

<nav class="navbar navbar-expand-lg" aria-label="Main navigation">

  <div class="container-xl">

    <button class="navbar-toggler border-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
      <i class="navbar-toggler-icon"></i>
    </button>

    <Logo />

    <OffCanvas/>

    <aside class="d-flex gap-2 align-items-center">

      <a class="nav-link" href="/">
        {t('nav.login')}
      </a>

      <a href={`/${locale}/contact-us`} class="btn btn-primary btn-sm rounded-4"> 
        <span class="d-none d-lg-inline ms-1"> {t('nav.sign')}</span>
      </a>
      
    </aside>

  </div>
</nav>