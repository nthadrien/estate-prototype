---
import { getLangFromUrl, useTranslations } from "src/i18n/utils.ts";

const locale = getLangFromUrl(Astro.url);
const t = useTranslations(locale);

---
<fieldset id="step-2" class="form-step p-3">

    <legend class="mb-4 fs-6 nav align-items-center justify-content-between text-capitalize">
        <span class="text-start">{t("step")} 2</span>
        <span class="text-primary">{t("step2")}</span>
    </legend>

    <label class="form-floating mb-3">
        <input type="text" class="form-control" name="name" placeholder=" " required>
        <span class="label">{t("username")} | Business {t("name")} </span>
    </label>

    <label class="form-floating mb-3">
        <input type="email" class="form-control" name="email" placeholder=" " required>
        <span class="label">{t("email")} | Business Email </span>
    </label>

    <label class="mb-3">
        <span class="form-label fw-bold">{t("cni")}</label>
        <input class="form-control" placeholder="" type="file" id="cniPic" required>
    </label>

    <div id="host">

        <h6 class="text-capitalize my-3">{t("host.details")}</h6>

        <label class="form-floating mb-3">
            <input type="email" class="form-control" name="email" placeholder=" " required>
            <span class="label">{t("email")} | Business </span>
        </label>

        <label class="mb-3">
            <span class="form-label fw-bold">{t("lid")}</label>
            <input class="form-control" placeholder="" type="file" id="lidPic">
        </label>

    </div>


    <section class="d-flex justify-content-between align-items-center py-3 my-3 text-capitalize">
        
        <label for="nexto1" class="nav-link"> 
            <i class="fa fa-long-arrow-left me-1"></i>
            {t("prev")} 
        </label>

        <label for="nexto2" class="btn btn-primary"> {t("nxt")} </label>
    </section>

</fieldset>